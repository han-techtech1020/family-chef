<div class="flex justify-between items-end mb-4">
  <h2 class="text-2xl font-bold text-gray-700">冷蔵庫の中身</h2>
  <%= link_to "+ 追加", new_stock_path, class: "bg-orange-500 text-white px-4 py-2 rounded-full shadow hover:bg-orange-600 text-sm font-bold" %>
</div>

<!-- 在庫リスト -->
<div class="space-y-3">
  <% @stocks.each do |stock| %>
    <div class="flex items-center justify-between bg-white border border-gray-100 p-3 rounded-lg shadow-sm hover:shadow-md transition">
      
      <!-- アイコンと名前 -->
      <div class="flex items-center space-x-3">
        <div class="bg-orange-100 text-orange-600 p-2 rounded-full">
          <!-- カテゴリーによってアイコンを変えるロジックを入れるとベストですが、今は共通で -->
          🍽️
        </div>
        <div>
          <p class="font-bold text-gray-800"><%= stock.ingredient.name %></p>
          <p class="text-xs text-gray-400"><%= stock.quantity %>個</p>
        </div>
      </div>

      <!-- 期限と削除 -->
      <div class="text-right">
        <!-- 期限が近いと赤くするロジック（簡易版） -->
        <% is_expired = stock.expiration_date < Date.today + 3.days %>
        <p class="text-xs font-bold <%= is_expired ? 'text-red-500' : 'text-green-600' %>">
          期限: <%= stock.expiration_date.strftime('%m/%d') %>
        </p>
        
        <%= link_to stock_path(stock), data: { turbo_method: :delete }, class: "text-xs text-gray-300 hover:text-red-500 mt-1 block" do %>
          削除
        <% end %>
      </div>

    </div>
  <% end %>

  <% if @stocks.empty? %>
    <div class="text-center py-10 text-gray-400">
      <p class="text-4xl mb-2">🧊</p>
      <p>冷蔵庫は空っぽです</p>
      <p class="text-sm">食材を追加してください</p>
    </div>
  <% end %>
</div>