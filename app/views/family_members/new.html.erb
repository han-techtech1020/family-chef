<div class="bg-white p-6 rounded-xl shadow-sm border border-orange-100">
  <h2 class="text-xl font-bold text-gray-800 mb-6 text-center">👨‍👩‍👧 家族情報の登録</h2>

  <%= form_with model: @family_member, local: true, class: "space-y-5" do |f| %>
    
    <!-- 名前 -->
    <div>
      <%= f.label :name, "名前（呼び名）", class: "block text-sm font-bold text-gray-700 mb-1" %>
      <%= f.text_field :name, placeholder: "ママ、長男など", class: "w-full border-gray-300 rounded-lg shadow-sm focus:border-orange-500 focus:ring focus:ring-orange-200 py-3" %>
    </div>

    <!-- ステータス -->
    <div>
      <%= f.label :status, "現在の状態（AIへの指示）", class: "block text-sm font-bold text-gray-700 mb-1" %>
      <%= f.text_field :status, placeholder: "授乳中、貧血気味、離乳食後期...", class: "w-full border-gray-300 rounded-lg shadow-sm focus:border-orange-500 focus:ring focus:ring-orange-200 py-3" %>
      <p class="text-xs text-gray-400 mt-1">※ここの入力内容をもとにAIが栄養バランスを考えます</p>
    </div>

    <!-- アレルギー -->
    <div>
      <%= f.label :allergy_info, "アレルギー・苦手なもの", class: "block text-sm font-bold text-gray-700 mb-1" %>
      <%= f.text_area :allergy_info, placeholder: "卵、そば、ピーマンなど", class: "w-full border-gray-300 rounded-lg shadow-sm focus:border-orange-500 focus:ring focus:ring-orange-200 py-3 h-24" %>
    </div>

    <!-- ボタン -->
    <div class="pt-4">
      <%= f.submit "保存する", class: "w-full bg-orange-500 text-white font-bold py-3 px-4 rounded-xl shadow-lg hover:bg-orange-600 transition cursor-pointer" %>
    </div>
  <% end %>

  <div class="text-center mt-6">
    <%= link_to "キャンセル", family_members_path, class: "text-gray-400 text-sm hover:text-gray-600" %>
  </div>
</div>